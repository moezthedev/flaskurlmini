pipeline {
    agent any
    environment {
        uri_name = credentials('uri_name')
        uri_pass = credentials('uri_pass')
        project_details = credentials('project_details')
    }
    stages {

           stage('Cloning code from github') {
            steps {
                // Execute some build steps, e.g., compiling code
                sh 'echo "cloning..."'
                git url:"https://github.com/moezthedev/flaskurlmini.git", branch: "main"

            }
        }
       
        stage('Building Image via Docker Compose') {
            steps {
                // Execute some test steps, e.g., running unit tests
                sh "echo Building Image via Docker Compose"
                 withCredentials([usernamePassword(credentialsId:"uri_name",passwordVariable:"uri_pass",usernameVariable:"uri_name")]){
                  sh "export ${uri_name}=${env.uri_name}"
                
                }
              withCredentials([usernamePassword(credentialsId:"uri_pass",passwordVariable:"uri_pass",usernameVariable:"uri_name")]){
                  sh "export ${uri_name}=${env.uri_pass}"
                
                }
                 withCredentials([usernamePassword(credentialsId:"project_details",passwordVariable:"uri_pass",usernameVariable:"uri_name")]){
                  sh "export ${uri_name}=${env.uri_pass}"
                
                }
                
                
                 sh "docker build -t flaskminiurl"
            }
        }
        stage('Deploy') {
            steps {
                // Deploy the application, e.g., to a server
                 sh "docker run -p 8000:8000 -d flaskminiurl"
                sh 'echo "Deploying..."'
            }
        }
    }
    
    post {
        success {
            // Actions to perform if the pipeline succeeds
            echo 'Pipeline succeeded!'
        }
        failure {
            // Actions to perform if the pipeline fails
            echo 'Pipeline failed!'
        }
        always {
            // Actions to perform regardless of pipeline outcome
            echo 'Pipeline completed!'
        }
    }
}
